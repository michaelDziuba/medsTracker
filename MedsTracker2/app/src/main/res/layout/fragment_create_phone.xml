<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context="com.example.cdu.medstracker.CreatePhoneFragment"
        android:columnCount="2"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:useDefaultMargins="true">


        <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:ems="10"
            android:hint="eg. Dr. Andrew Smith"
            android:textColor="#000000"
            android:id="@+id/phoneNameEditText"
            android:layout_column="1">

            <requestFocus />

        </EditText>

        <TextView
            android:text="Phone:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_column="0"
            android:textSize="22sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:gravity="top|left"
            android:hint="519 448 1111"
            android:ems="10"
            android:textColor="#000000"
            android:id="@+id/phoneNumberEditText"
            android:layout_column="1" />



        <TextView
            android:text="Note:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_column="0"
            android:textSize="22sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:textColor="#000000"
            android:hint="eg. Family doctor"
            android:id="@+id/phoneNoteEditText"
            android:layout_column="1" />



        <Button
            android:text="CREATE CARD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phoneCreateButton"
            android:layout_columnSpan="2"
            android:layout_column="0" />
    </GridLayout>
</ScrollView>
