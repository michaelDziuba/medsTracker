<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context="com.example.cdu.medstracker.ViewPagerContentFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/view_pager_header"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textAlignment="center"
            android:id="@+id/textViewPagerHeader"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_pager_image_height"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/view_pager_image_view_padding"
            android:paddingRight="@dimen/view_pager_image_view_padding"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/imageViewPager"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/view_pager_body_text_size"
            android:id="@+id/textViewPagerBody"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewPagerTextView"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/view_pager_body_text_size"
                android:textStyle="bold" />



    </LinearLayout>
</ScrollView>
